<table class="table">
    <thead>
        <tr>
            <th scope="col">生徒</th>
            <th scope="col">担当講師</th>
            <th scope="col">日付</th>
            <th scope="col">時限</th>
            <th scope="col">メッセージ</th>
            <th scope="col">連絡事項</th>
            <th scope="col">詳細</th>
        </tr>
    </thead>
    <tbody>
        <%= @daily_sheets.each do |d| %>
                <tr>
                    <td><%= d.student_member.full_name %></td>
                    <td><%= d.staff_member.full_name %></td>
                    <td><%= d.study_date %></td>
                    <td><%= d.period %></td>
                    <td><%= d.message %></td>
                    <td><%= d.information %></td>
                    <td><%= link_to "表示", student_daily_sheet_path(d.id), class: "btn btn-outline-info" %></td>
                </tr>
        <% end %>
    </tbody>
</table>
<%= button_to "トップに戻る", student_root_path, method: "get", class: "btn btn-outline-secondary" %>
<%= paginate @daily_sheets %>