<div class="form-group">
    <%= f.label :student_member_id, "生徒:" %>
    <%= f.collection_select :student_member_id, StudentMember.all, :id, :full_name, class: "form-control", selected: current_student %>
</div>
<div class="form-group">
    <%= f.label :examination_id, "テスト:" %>
    <%= f.collection_select :examination_id, current_student.school.examinations, :id, :name, class: "form-control", prompt: "選択する" %>
    <%# current_studentが通っている学校のテストのみが選択肢として表示される %>
</div>
<div class="form-group">
    <%= f.hidden_field :staff_member_id, value: current_student.staff_member.id %>
</div>
<div class="form-group">
    <%= f.hidden_field :parent_member_id, value: current_student.parent_member.id %>
</div>

<div class="mt-3">
    <%= "-----点数を登録する-----" %>
    <%= f.fields_for :scores do |t| %>
        <%= render "score_fields", f: t %>
    <% end %>
</div>

<div id="score_insertion_point"></div>

<div class="mt-2">
    <%= link_to_add_association "+フォームを追加", f, :scores,
    class: "btn btn-secondary btn-sm",
    data: {
    association_insertion_node: '#score_insertion_point',
    association_insertion_method: 'after'
    } %>
    <%# ボタンを押すと科目とその点数を入力するフォームが追加される %>
</div>