<%= form_with scope: :session, url: student_login_path, local: true do |f| %>
    <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email %>
    </div>
    <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.text_field :password %>
    </div>
    <div class="form-submit">
        <%= f.submit "ログイン", class: "btn btn-outline-info" %>
    </div>
<% end %>
<%= button_to "戻る", root_path, method: "get", class: "btn btn-outline-secondary" %>
<a>または<%= link_to "新規登録", student_signup_path, class: "text-info", id: "student_signup" %></a>