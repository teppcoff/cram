<% provide(:body_title, "お知らせ一覧") %>
<div class="content">
    <% @posts.each do |post| %>
        <div class="d-flex flex-row">
            <p class="col-2">[<%= post.created_at.strftime("%Y-%m-%d") %>]</p>
            <p class="text-danger"><%= "[重要]" if post.important %></p>
            <p class="col-9"><%= link_to "#{post.title}", student_post_path(post.id), id: "show_post" %></p>
        </div>
    <% end %>
</div>
<%= paginate @posts %>
