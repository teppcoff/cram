<div class="form-group">
    <%= f.hidden_field :event_id, value: @event.id %>
</div>
<div class="form-group">
    <%= f.label :student_member_id, "生徒", class: "required" %>
    <%= f.collection_select :student_member_id, StudentMember.all, :id, :full_name, { selected: @event.student_member_id } %>
</div>
<div class="form-group">
    <%= f.label :staff_member_id, "担当講師", class: "required" %>
    <%= f.collection_select :staff_member_id, StaffMember.all, :id, :full_name, selected: current_staff.id %>
</div>
<div class="form-group">
    <%= f.label :study_date, "日付", class: "required" %>
    <%= f.date_field :study_date, { value: @event.starts_at.strftime("%Y-%m-%d") } %>
</div> 
<div class="form-group">
    <%= f.label :period_id, "時限", class: "required" %>
    <%= f.number_field :period_id, { value: @event.period.number_of_period, min: 1, max: 5 , class: "form-control" } %>
</div>
<div class="form-group">
    <%= f.label :subject_id, "科目", class: "required" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, { selected: @event.subject_id } %>
</div>
<div class="form-group">
    <%= f.label :textbook_id, "テキスト" %>
    <%= f.collection_select :textbook_id, Textbook.all, :id, :name, prompt: "選択する" %>
</div>
<div class="form-group">
    <%= f.label :message, "メッセージ", class: "required" %>
    <%= f.text_area :message, maxlength: 300, class: "form-control", placeholder: "例）よく集中できていました。期末テストに向けて頑張りましょう" %>
</div>
<div class="form-group">
    <%= f.label :information, "連絡事項", class: "required" %>
    <%= f.text_area :information, maxlength: 300, class: "form-control", placeholder: "例）次回小テストを行うので、該当範囲の復習をしてきてください。" %>
</div>
<div class="form-group">
    <%= f.radio_button :participation, :attendant %>
    <%= f.label :participation, "出席" %>
    <%= f.radio_button :participation, :absent %>
    <%= f.label :participation, "欠席" %>
    <%= f.radio_button :participation, :late %>
    <%= f.label :participation, "遅刻" %>
</div>
