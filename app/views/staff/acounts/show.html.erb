<table class="table">
    <tr><th scope="col">性</th></tr>
    <tr><td><%= @staff.family_name %></td></tr>
    <tr><th scope="col">名</th></tr>
    <tr><td><%= @staff.given_name %></td></tr>
    <tr><th scope="col">性</th></tr>
    <tr><td><%= @staff.family_name %></td></tr>
    <tr><th scope="col">性（フリガナ）</th></tr>
    <tr><td><%= @staff.family_name_kana %></td></tr>
    <tr><th scope="col">名（フリガナ）</th></tr>
    <tr><td><%= @staff.given_name_kana %></td></tr>
    <tr><th scope="col">性別</th></tr>
    <tr><td><%= @staff.gender_i18n %></td></tr>
    <tr><th scope="col">生年月日</th></tr>
    <tr><td><%= @staff.birthday %></td></tr>
    <tr><th scope="col">メールアドレス</th></tr>
    <tr><td><%= @staff.email %></td></tr>
    <tr><th scope="col">雇用形態</th></tr>
    <tr><td><%= @staff.employment_status_i18n %></td></tr>
</table>
<div class="btn-group">
        <%= button_to "編集", staff_edit_path(@staff.id), method: "get", class: "btn btn-outline-primary mx-2" %>
        <%= button_to "削除", { controller: "acounts", action: "destroy" }, method: "delete",
            data: { confirm: "ユーザー「#{@staff.full_name}」を削除します。本当によろしいですか？" }, class: "btn btn-outline-danger" %>
</div>