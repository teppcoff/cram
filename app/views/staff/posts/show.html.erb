<% provide(:body_title, "お知らせ詳細") %>
<div class="content">
    <div class="created_at mb-3">
        <%= @post.created_at.strftime("%Y-%m-%d") %>
        <%= @post.staff_member.full_name %>
    </div>
    <div class="d-flex flex-row border-bottom">
        <p class="h5"><%= @post.title %></p>
        <p class="text-danger"><%= "[重要]" if @post.important %></p>
    </div>
    <div class="content mt-4">
        <p id="target_content"><お知らせ内容></p>
        <p class="mt-1"><%= @post.content %></p>
    </div>
    <div class="btn-group mt-4">
        <%= button_to "編集", edit_staff_post_path(@post), method: "get", class: "btn btn-outline-primary" %>
        <%= button_to "削除", { controller: "posts", action: "destroy" }, method: "delete",
        data: { confirm: "お知らせ「#{@post.title}」を削除します。本当によろしいですか？" }, class: "btn btn-outline-danger mx-2" %>
        <%= button_to "一覧", staff_posts_path, method: "get", class: "btn btn-outline-secondary" %>
    </div>
</div>
