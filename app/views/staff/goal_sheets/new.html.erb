<%= form_with(model: @goal_sheet, url: staff_goal_sheets_new_path, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :student_member_id, "生徒:" %>
        <%= f.collection_select :student_member_id, StudentMember.all, :id, :family_name, :include_blank => true %>
    </div>
    <div class="form-group">
        <%= f.label :staff_member_id, "担当講師:" %>
        <%= f.collection_select :staff_member_id, StaffMember.all, :id, :family_name, :include_blank => true %>
    </div>
    <div class="form-group">
        <%= f.label :name, "名称:" %>
        <%= f.text_field :name, class: "form-control" %>
    </div> 
    <div class="form-group">
        <%= f.label :number_of_lessons, "授業回数:" %>
        <%= f.number_field :number_of_lessons, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, "追記事項:" %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    <%= f.submit "作成" %>
<% end %> 