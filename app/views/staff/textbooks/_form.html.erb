<div class="form-group">
    <%= f.label :name, "タイトル", class: "required" %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :text_type, "テキストタイプ", class: "required" %>
    <%= f.select :text_type, Textbook.text_types_i18n.keys.map{|k| [I18n.t("enums.textbook.text_type.#{k}"), k]}, prompt: "選択する" %>
</div>
<div class="form-group">
    <%= f.label :subject_id, "科目", class: "required" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, prompt: "選択する" %>
</div>
