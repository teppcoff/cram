<div class="form-group">
    <%= f.label :name, "タイトル:" %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :text_type, "テキストタイプ:" %>
    <%= f.select :text_type, Textbook.text_types_i18n.keys.map{|k| [I18n.t("enum.textbook.text_type.#{k}"), k]}, prompt: "選択する" %>
</div>
<div class="form-group">
    <%= f.label :subject, "科目:" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, prompt: "選択する" %>
</div>
