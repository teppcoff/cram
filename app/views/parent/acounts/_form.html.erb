<div class="form-group">
    <%= f.label :family_name, "性" %>
    <%= f.text_field :family_name, class: "form-control" %>
</div>   
<div class="form-group">
    <%= f.label :given_name, "名" %>
    <%= f.text_field :given_name, class: "form-control" %>
</div>   
<div class="form-group">
    <%= f.label :family_name_kana, "性（フリガナ）" %>
    <%= f.text_field :family_name_kana, class: "form-control" %>
</div>   
<div class="form-group">
    <%= f.label :given_name_kana, "名（フリガナ）" %>
    <%= f.text_field :given_name_kana, class: "form-control" %>
</div> 
<div class="group">
    <%= f.label :gender, "性別:" %>
    <%= f.label :男性 %>
    <%= f.radio_button :gender, :male %>
    <%= f.label :女性 %>
    <%= f.radio_button :gender, :female %>
    <%= f.label :その他 %>
    <%= f.radio_button :gender, :others %>
</div>
<div class="group">
    <%= f.label :birthday, "生年月日:" %>
    <%= f.date_select :birthday, start_year: Time.now.year, end_year: 1900, class: "form-control" %>
</div> 
<div class="group">
    <%= f.label :email, "メールアドレス:" %>
    <%= f.text_field :email, class: "form-control" %>
</div> 