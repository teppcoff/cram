<%= form_with model: @parent, url: parent_edit_path, local: true do |f| %>
    <div class="form-group">
        <%= f.label :family_name, "性" %>
        <%= f.text_field :family_name, class: "form-control" %>
    </div>   
    <div class="form-group">
        <%= f.label :given_name, "名" %>
        <%= f.text_field :given_name, class: "form-control" %>
    </div>   
    <div class="form-group">
        <%= f.label :family_name_kana, "性（フリガナ）" %>
        <%= f.text_field :family_name_kana, class: "form-control" %>
    </div>   
    <div class="form-group">
        <%= f.label :given_name_kana, "名（フリガナ）" %>
        <%= f.text_field :given_name_kana, class: "form-control" %>
    </div> 
    <div class="group">
        <%= f.label :gender, "性別:" %>
        <%= f.select :gender, ParentMember.genders_i18n.keys.map{|k| [I18n.t("enum.parent_member.gender.#{k}"), k]} %>
    </div> 
    <div class="group">
        <%= f.label :birthday, "生年月日:" %>
        <%= f.date_select :birthday, start_year: Time.now.year, end_year: 1900, class: "form-control" %>
    </div> 
    <div class="group">
        <%= f.label :email, "メールアドレス:" %>
        <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.text_field :password, class: "form-control" %>
    </div>   
    <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認）" %>
        <%= f.text_field :password_confirmation, class: "form-control" %>
    </div>
    <%= f.submit "更新", class: "btn btn-outline-success" %>
<% end %>