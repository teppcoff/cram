<div class="created_at mb-3">
    <%= @post.created_at.strftime("%Y-%m-%d") %>
    <%= @post.staff_member.full_name %>
</div>
<div class="d-flex flex-row border-bottom">
    <p class="h5"><%= @post.title %></p>
    <p class="text-danger"><%= "[重要]" if @post.important %></p>
</div>
<div class="content mt-4">
    <p><お知らせ内容></p>
    <p class="mt-1"><%= @post.content %></p>
</div>
<div class="btn-group mt-4">
    <%= button_to "一覧", parent_posts_path, method: "get", class: "btn btn-outline-secondary" %>
</div>