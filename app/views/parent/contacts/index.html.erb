<div class="body-title">
    <h5>お問い合わせ</h5>
</div>
<div class="content">
    <%= form_with model: @contact, local: true, url: parent_contacts_confirm_path do |f| %>
        <% if @contact.errors.any? %>
        <div class="alert alert-danger" role="alert">
            <h5><strong>入力内容にエラーがあります。</strong></h5>
            <ul>
            <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>

        <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, id: "name", class: "form-control", placeholder: "名前" %>
        </div>

        <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.text_field :email, id: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
            <%= f.label :content, "お問い合わせ内容" %>
            <%= f.text_area :content, id: "content", class: "form-control", placeholder: "お問い合わせ内容", rows: "5" %>
        </div>

        <div class="form-submit">
            <%= f.submit "確認", class: "btn btn-dark" %>
        </div>
    <% end %>
</div>